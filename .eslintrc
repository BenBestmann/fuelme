{
    "env": {
        "node": true,
        "es6": true,
	  	"browser": true,
        "mocha": true,
        "mongo": true
    },
    "extends": [
	  "eslint:recommended",
	  "plugin:import/errors",
	  "plugin:import/warnings"
	],
  	"plugins": ["react"],
  	"parserOptions": {
	  "ecmaVersion": 6,
	  "sourceType": "module",
	  "ecmaFeatures": { "jsx": true }
  	},
    "rules": {
        "camelcase": ["error"],
        "eqeqeq": ["error", "smart"],
        "indent": ["error", 4],
        "quotes": ["error", "single"],
        "no-unused-vars": ["error", { "vars": "all", "args": "none" }],
        "prefer-const": ["error", {"destructuring": "any"}],
        "strict": ["error", "safe"],
        "no-console": ["warn"]
    }
}
